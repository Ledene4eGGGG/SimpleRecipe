<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.RecepiDayFragment">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"
            android:padding="16dp">
        </ImageView>

        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="12dp"
            android:src="@drawable/podelitsya">
        </ImageView>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Чесночная картошка"
            app:layout_constraintTop_toBottomOf="@+id/back"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:textSize="24sp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/iv_recepi_day"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_name">

        <ImageView
            android:id="@+id/im_recepi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/lunch" />
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/serdtse"
        app:layout_constraintTop_toBottomOf="@+id/iv_recepi_day"
        android:padding="16dp">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="приготовлено"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/iv_recepi_day"
        app:layout_constraintStart_toEndOf="@id/like"
        android:paddingTop="16dp"
        android:layout_marginStart="128dp">
    </TextView>

    <TextView
        android:id="@+id/ingridients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/like"
        android:text="ингридиенты:"
        android:textSize="18sp"
        android:paddingStart="16dp"
        android:textStyle="bold">
    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_view_with_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ingridients"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:paddingStart="16dp"
        tools:listitem="@layout/item_ingridients_list"/>









</androidx.constraintlayout.widget.ConstraintLayout>